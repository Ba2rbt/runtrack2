<?php
// Déclare la variable avec la chaîne donnée
$str = "I'm sorry Dave I'm afraid I can't do that";

// Définit les voyelles (minuscules et majuscules)
$voyelles = "aeiouyAEIOUY";

// Parcours la chaîne
for ($i = 0; $i < strlen($str); $i++) {
    $caractere = $str[$i];
    // Vérifie si le caractère actuel est une voyelle
    if (strpos($voyelles, $caractere) !== false) {
        echo $caractere;
    }
}
?>
